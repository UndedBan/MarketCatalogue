@model ErrorViewModel
@{
    ViewData["Title"] = "Oops! Something went wrong";
}

<div class="container mt-5 text-center">
    <h1 class="display-4 text-danger">
        <i class="bi bi-exclamation-triangle-fill"></i> Oops!
    </h1>

    <p class="lead">Something went wrong while processing your request.</p>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="alert alert-warning mt-4 mx-auto" style="max-width: 600px;">
            <strong>Error:</strong> @Model.ErrorMessage
        </div>
    }

    @if (Model.ShowRequestId)
    {
        <p class="text-muted mt-3">
            <small>Request ID: <code>@Model.RequestId</code></small>
        </p>
    }

    <a asp-action="Index" asp-controller="Home" class="btn btn-primary mt-4">Back to Home</a>

    <div class="mt-5">
        <h5>Need help?</h5>
        <p>
            If the issue persists, please contact support or try again later.
        </p>
    </div>
</div>
