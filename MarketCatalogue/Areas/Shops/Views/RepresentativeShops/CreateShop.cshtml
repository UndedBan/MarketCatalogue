@model MarketCatalogue.Presentation.Areas.Shops.Models.ViewModels.ShopCreateViewModel

@{
    ViewData["Title"] = "Create Shop";
}

<h2 class="mb-4">Create Shop</h2>

<form asp-action="CreateShop" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label asp-for="ShopName" class="form-label"></label>
        <input asp-for="ShopName" class="form-control" />
        <span asp-validation-for="ShopName" class="text-danger"></span>
    </div>

    <h4 class="mt-4">Address</h4>
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Address.Street" class="form-label"></label>
            <input asp-for="Address.Street" class="form-control" />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Address.City" class="form-label"></label>
            <input asp-for="Address.City" class="form-control" />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Address.State" class="form-label"></label>
            <input asp-for="Address.State" class="form-control" />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Address.PostalCode" class="form-label"></label>
            <input asp-for="Address.PostalCode" class="form-control" />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Address.Country" class="form-label"></label>
            <input asp-for="Address.Country" class="form-control" />
        </div>
    </div>

    <h4 class="mt-4">Weekly Schedule</h4>
    @for (int i = 0; i < Model.Schedule?.Count; i++)
    {
        <div class="row mb-2">
            <div class="col-md-2">
                <strong>@Model.Schedule[i].Day</strong>
                <input type="hidden" asp-for="Schedule[i].Day" />
            </div>
            <div class="col-md-5">
                <input asp-for="Schedule[i].OpenTime" class="form-control" type="time" />
            </div>
            <div class="col-md-5">
                <input asp-for="Schedule[i].CloseTime" class="form-control" type="time" />
            </div>
        </div>
    }


    <button type="submit" class="btn btn-success mt-3">Create Shop</button>
    <a asp-action="Index" class="btn btn-secondary mt-3 ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
