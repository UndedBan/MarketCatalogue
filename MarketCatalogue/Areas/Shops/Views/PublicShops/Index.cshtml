@using MarketCatalogue.Presentation.Areas.Shops.Models.ViewModels
@model ShopsSummaryViewModel

@{
    ViewData["Title"] = "Shops";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Shops</h2>
    <a class="btn btn-primary" asp-action="CreateShop" asp-controller="RepresentativeShops">
        <i class="bi bi-plus-circle-fill me-2"></i> Add New Shop
    </a>
</div>

@if (Model.Shops == null || !Model.Shops.Any())
{
    <div class="alert alert-info text-center" role="alert">
        <h4 class="alert-heading">No Shops Found!</h4>
        <p>There are no shops available at the moment.</p>
        <hr />
        <p class="mb-0">Click "Add New Shop" to create one.</p>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var shop in Model.Shops)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-primary">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary fw-bold mb-3">@shop.ShopName</h5>

                        @if (shop.Address != null)
                        {
                            <div class="mb-3">
                                <h6 class="text-secondary"><i class="bi bi-geo-alt-fill me-2"></i> Address:</h6>
                                <address class="mb-0 small text-muted ps-4">
                                    @if (!string.IsNullOrWhiteSpace(shop.Address.Street))
                                    {
                                        @shop.Address.Street

                                        <br />
                                    }
                                    @if (!string.IsNullOrWhiteSpace(shop.Address.City))
                                    {
                                        @shop.Address.City
                                    }
                                    @if (!string.IsNullOrWhiteSpace(shop.Address.State))
                                    {
                                        @(", " + shop.Address.State)
                                    }
                                    @if (!string.IsNullOrWhiteSpace(shop.Address.PostalCode))
                                    {
                                        @(" " + shop.Address.PostalCode)
                                    }
                                    @if (!string.IsNullOrWhiteSpace(shop.Address.Country))
                                    {
                                        <br />

                                        @shop.Address.Country
                                    }
                                </address>
                            </div>
                        }

                        @if (shop.Schedule != null && shop.Schedule.Any())
                        {
                            <div class="mb-2">
                                <h6 class="text-secondary"><i class="bi bi-calendar-week-fill me-2"></i> Schedule:</h6>
                                <ul class="list-unstyled mb-0 small text-muted ps-4">
                                    @foreach (var scheduleEntry in shop.Schedule.OrderBy(s => (int)s.Day))
                                    {
                                        <li>
                                            <strong>@scheduleEntry.Day:</strong>
                                            @if (scheduleEntry.OpenTime == TimeSpan.Zero && scheduleEntry.CloseTime == TimeSpan.Zero)
                                            {
                                                <span class="text-danger">Closed</span>
                                            }
                                            else
                                            {
                                                <span>@($"{scheduleEntry.OpenTime:hh\\:mm} - {scheduleEntry.CloseTime:hh\\:mm}")</span>
                                            }
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent border-top-0 text-end">
                        <a asp-action="ShopPage" asp-route-shopId="@shop.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Select
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <partial name="_Pagination" model="Model.Pagination" />
}
