@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    .text-primary-green {
        color: #00b894 !important;
    }

    .btn-primary-green {
        background-color: #00b894;
        border-color: #00b894;
        color: white;
    }

        .btn-primary-green:hover,
        .btn-primary-green:focus {
            background-color: #019974;
            border-color: #019974;
            color: white;
        }

    .form-control:focus {
        border-color: #00b894;
        box-shadow: 0 0 0 0.25rem rgba(0, 184, 148, 0.25);
    }

    .form-floating > label {
        color: #6c757d;
    }

    .form-check-input:focus {
        border-color: #00b894;
        box-shadow: 0 0 0 0.25rem rgba(0, 184, 148, 0.25);
    }

    .form-check-input:checked {
        background-color: #00b894;
        border-color: #00b894;
    }

    .external-login-button {
        margin: 0.25rem;
    }

    .section-divider {
        border-top: 1px solid #dee2e6;
        margin: 2rem 0;
    }
</style>

<h1 class="text-primary-green text-center">@ViewData["Title"]</h1>

<div class="row justify-content-center mt-4">
    <div class="col-md-5 col-lg-4">
        <section>
            <form id="account" method="post">
                <h2 class="h5 text-secondary mb-3">Use a local account to log in</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-primary-green btn-lg">Log in</button>

                <div class="mt-3 text-center small">
                    <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                    <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                    <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
