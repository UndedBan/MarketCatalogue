@model MarketCatalogue.Presentation.Areas.Purchasers.Models.ViewCartViewModel

@{
    ViewData["Title"] = "Your Cart";
}

<h2>Your Cart</h2>

@if (Model.Items != null && Model.Items.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th>Available Stock</th> <!-- renamed for clarity -->
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>
                        <form asp-action="UpdateQuantity" method="post" class="d-inline">
                            <input type="hidden" name="CartItemId" value="@item.Id" />
                            <input type="number" name="Quantity" value="@item.Quantity" min="1" max="@item.AvailableStock" />
                            <button type="submit" class="btn btn-primary btn-sm">Update</button>
                        </form>
                    </td>
                    <td>@item.AvailableStock</td>
                    <td>@(item.Price.ToString("C"))</td>
                    <td>
                        <form asp-action="DeleteCartItem" method="post" class="d-inline">
                            <input type="hidden" name="CartItemId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-end fw-bold">Total:</td>
                <td class="fw-bold">@Model.TotalPrice.ToString("C")</td>
                <td>
                    <form asp-action="PurchaseCartItems" method="post" class="d-inline">
                        <button type="submit" class="btn btn-primary">Purchase</button>
                    </form>
                </td>
            </tr>
        </tfoot>
    </table>

    @await Html.PartialAsync("_Pagination", Model.Pagination)
}
else
{
    <div class="alert alert-info">
        Your cart is empty.
    </div>
}
